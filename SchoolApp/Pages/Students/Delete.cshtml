@page "{id:int}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DeleteModel

@{
    ViewData["Title"] = "Verwijderen";
}

<h2>Delete</h2>

<p class="text-danger">@Model.ErrorMessage</p>

<h4>The following student will be deleted:</h4>
<div>Corresponding enrollments will also be deleted.</div>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Prefix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Prefix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Student.StudentId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-page="./Details" asp-route-id="@Model.Student.StudentId" class="btn btn-cancel">Cancel</a>
    </form>
</div>
<div>
    <a asp-page="./Index" class="btn btn-custom">Back to list</a>
</div>
