@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SchoolApp.Models
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Enrollment</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Enrollment.EnrollmentType" class="control-label"></label>
                <select asp-for="Enrollment.EnrollmentType" class="form-control"
                        asp-items="Html.GetEnumSelectList<EnrollmentType>()">
                    <option value="">-- Select Enrollment Type --</option>
                </select>
                <span asp-validation-for="Enrollment.EnrollmentType" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Enrollment.StartDate" class="control-label"></label>
                <input asp-for="Enrollment.StartDate" class="form-control"/>
                <span asp-validation-for="Enrollment.StartDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Enrollment.EndDate" class="control-label"></label>
                <input asp-for="Enrollment.EndDate" class="form-control"/>
                <span asp-validation-for="Enrollment.EndDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Enrollment.Student" class="control-label"></label>
                <select asp-for="Enrollment.StudentId" class="form-control"
                        asp-items="@Model.StudentNameSelectList">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="Enrollment.StudentId" class="text-danger"></span>
            </div>
            <input type="hidden" value="@Model.StudentId" name="StudentID"/>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
                <a asp-page="Index" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
