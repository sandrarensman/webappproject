@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Welcome to SchoolApp";
}

<div class="text-center mt-5">
    <h1>Welcome to SchoolApp</h1>
    <p class="lead">Manage students, groups, and enrollments with ease.</p>
</div>

<hr/>

<div class="row text-center">
    <div class="col-md-4">
        <h2>Students</h2>
        <p>View and manage the student database.</p>
        <a asp-page="/Students/Index" class="btn btn-custom">Go to Students</a>
    </div>
    <div class="col-md-4">
        <h2>Groups</h2>
        <p>Organize students into groups.</p>
        <a asp-page="/Groups/Index" class="btn btn-custom">Go to Groups</a>
    </div>
    <div class="col-md-4">
        <h2>Enrollments</h2>
        <p>Manage enrollment records and schedules.</p>
        <a asp-page="/Enrollments/Index" class="btn btn-custom">Go to Enrollments</a>
    </div>
</div>